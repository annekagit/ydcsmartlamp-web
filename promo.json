fetch('promo.json')
  .then(response => response.json())
  .then(data => {
    document.querySelector('#promo-modal h2').innerText = data.title;
    document.querySelector('#promo-modal p').innerText = data.message;
    document.querySelector('#promo-modal button').onclick = () => window.location.href = data.link;
  });
